<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.1.xsd">

	<!-- Configurar el uso de anotaciones -->
	<context:annotation-config></context:annotation-config>
	
	<!-- Configurar el uso de autodiscovery - Indicamos la ruta donde se encuentran las clases que seran nuestros Beans -->
	<context:component-scan base-package="com.accenture.fers"></context:component-scan>
		
   <!-- para activar las anotaciones de JPA, es decir hibernate -->
   <tx:annotation-driven transaction-manager = "transactionManager"/>
   
   <!-- configuracion el acceso a la base de datos que es la persistencia -->
   
	<bean class="org.apache.commons.dbcp.BasicDataSource" id="dataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver"/>
		<!--  cambiar la base de datos, hay que anadir un 2 -->
		<property name="url" value="jdbc:mysql://localhost:3306/festivaldb2"/>
		<property name="username" value="eclipse"/>
		<property name="password" value="1234abcd"/>
	</bean>

	<!-- establece la conexion a base y se le inyecta la fuente de datos dataSource -->
	
	<bean class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean" id="entityManagerFactory">
		<property ref="dataSource" name="dataSource"/>
		<property name="persistenceUnitName" value="SpringPractica1111"/>
		<property name="packagesToScan" value="es.tecnilogica.ejemplos.spring.entities"/>
		<property name="jpaVendorAdapter">
		<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
			<property name="showSql" value="true"/>
			<property name="databasePlatform" value="org.hibernate.dialect.MySQLDialect"/>
		</bean>
  		</property>
	</bean>
	
	
	<!--  crea la entityManager, el factory y donde tiene que buscar los objetos que van a ser mapeados y 
													se le inyecta la especificaciÃ³n del entityManagerFactory-->
	<bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor"/>
	<bean class="org.springframework.orm.jpa.JpaTransactionManager" id="transactionManager">
		<property ref="entityManagerFactory" name="entityManagerFactory"/>
	</bean>
	
	

</beans>
